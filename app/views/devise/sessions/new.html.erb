<!-- view/devise/sessions/new.html.erb-->


<!-- container, content1, content2 설정 => app/stylesheets/posts.scss-->
<!-- 로고 -->
  <div class="moment_logo">
    <img src="/moment_logo.png" >
  </div>

  <!-- 로그인 화면 -->
  <div class="login_box">
    <img src="/moment_word.png" hspace="20"><br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <div class="ui form">
          <i class="user icon"></i><%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ui left icon input", placeholder: "이메일을 입력해 주세요" %>
    
      <div class="field">
          <i class="lock icon"></i><%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: "ui left icon input" %>
      </div>
    
        </div>
      </div>
        <div class="action">
          <%= f.submit "Log in",class: "ui blue submit button" %>
        </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>

<style>
  .moment_logo{
    position:absolute;
    border:2px;
    top:70%;
    left:2em;
    bottom:50%;
    padding-right: 90px;
  }
  .login_box{
  padding:3em;
  }
</style>